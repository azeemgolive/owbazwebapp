<form action="{{ path('owbaz_user_employees_create') }}" method="post" {{ form_enctype(form) }}>
 {{ form_errors(form) }}

            <div id="detail_wrapper">      
                <div id="p_hd">Employer Registration</div>
                <div class="span3">
                  <div id="product_content">
                        <div id="pro_detail">
                            <div class="edt_container">         
                                <div class="row-fluid show-grid">
                                    <div class="span3">Email</div>
                                    <div class="span3">{{ form_widget(form.email) }}{{ form_errors(form.email) }}</div>

                                </div>
                                <div class="row-fluid show-grid">
                                    <div class="span3">Password</div>
                                    <div class="span3">{{ form_widget(form.password.password, { 'attr': {'placeholder': 'Password'} }) }}</div>
                                    <div class="span3">Confirm Password</div>
                                    <div class="span3">  {{ form_widget(form.password.confirm, { 'attr': {'placeholder': 'Confirm Password'} }) }}
                                        {{ form_errors(form.password.password) }}
                                        {{ form_errors(form.password.confirm) }}</div>

                                    {% for flash_message in app.session.flashbag.get('error') %}
                                    <span style="color: red">
                                {{ flash_message }}
                                        </span>
                                    {% endfor %}

                                </div>
                                <div class="row-fluid show-grid">
                                    <div class="span3">Company Name</div>
                                    <div class="span3">{{ form_widget(form.company_name) }}{{ form_errors(form.company_name) }}</div>
                                    <div class="span3">Contact Person</div>
                                    <div class="span3">{{ form_widget(form.contact_person) }}{{ form_errors(form.contact_person) }}</div>
                                </div>

                                <div class="row-fluid show-grid">
                                    <div class="span3">Industry Type</div>
                                    <div class="span3">{{ form_widget(form.industry) }}{{ form_errors(form.industry) }}</div>

                                </div>

                                <div class="row-fluid show-grid">
                                    <div class="span3">Company Description</div>
                                    <div class="span3">{{ form_widget(form.company_description) }}{{ form_errors(form.company_description) }}</div>
                                    <div class="span3">Address</div>
                                    <div class="span3">{{ form_widget(form.address) }}{{ form_errors(form.address) }}</div>
                                </div>          
                                <div class="row-fluid show-grid">
                                    <div class="span3">Country</div>
                                    <div class="span3">{{ form_widget(form.country) }}{{ form_errors(form.country) }}</div>

                                    <div class="span3">Phone</div>
                                    <div class="span3">{{ form_widget(form.phone_number) }}{{ form_errors(form.phone_number) }}</div>
                                    
                                    <div class="span3">Website</div>
                                    <div class="span3">{{ form_widget(form.company_website) }}{{ form_errors(form.company_website) }}</div>
                                </div>
                                <div class="row-fluid show-grid">
                                    <div class="span3">&nbsp;</div>
                                    <div class="span3">&nbsp;</div>
                                    <div class="span3">&nbsp;</div>
                                    <div class="span3">
				{{ form_rest(form) }}
                                            <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="SAVE" class="btn btn-large btn-primary"/>                                     
                                    </div>                                    
                                    </div>
                                </div>
                                </div> 
                                     



                                </div>      
                            </div><!-- End pro_detail -->      
                        </div><!-- End product_content --> 
                   
                </form> 