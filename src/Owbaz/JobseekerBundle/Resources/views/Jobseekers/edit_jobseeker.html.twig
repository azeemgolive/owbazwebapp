<form action="{{ path('owbaz_jobseeker_profile_update', { 'user_id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}

    <div id="detail_wrapper">      
        <div id="p_hd">Jobseeker Registration</div>
        <div class="span3">
            <div id="product_content">
                <div id="pro_detail">
                    <div class="edt_container">         
                        <div class="row-fluid show-grid">
                            <div class="span3">First Name</div>
                            <div class="span3">{{ form_widget(form.first_name) }}{{ form_errors(form.first_name) }}</div>
                            <div class="span3">Last Name</div>
                            <div class="span3">{{ form_widget(form.last_name) }}{{ form_errors(form.last_name) }}</div>
                        </div>          
                        <div class="row-fluid show-grid">
                            <div class="span3">Email</div>
                            <div class="span3">{{ form_widget(form.email) }}{{ form_errors(form.email) }}</div>
                            <div class="span3">Gender</div>
                            <div class="span3">{{ form_widget(form.gender) }}{{ form_errors(form.gender) }}</div>
                        </div>          
                        <div class="row-fluid show-grid">
                            <div class="span3">Mobile Number</div>
                            <div class="span3">{{ form_widget(form.mobile_number) }}{{ form_errors(form.mobile_number) }}</div>
                            <div class="span3">Address</div>
                            <div class="span3">{{ form_widget(form.address) }}{{ form_errors(form.address) }}</div>
                        </div>          
                        <div class="row-fluid show-grid">
                            <div class="span3">Country</div>
                            <div class="span3">{{ form_widget(form.country) }}{{ form_errors(form.country) }}</div>
                            <div class="span3">Nationality</div>
                            <div class="span3">{{ form_widget(form.nationality) }}{{ form_errors(form.nationality) }}</div>
                        </div>          
                        <div class="row-fluid show-grid">
                            <div class="span3">User Education</div>
                            <div class="span3">{{ form_widget(form.user_education) }}{{ form_errors(form.user_education) }}</div>
                            <div class="span3">User Experience</div>
                            <div class="span3">{{ form_widget(form.user_experience) }}{{ form_errors(form.user_experience) }}</div>
                            
                        </div>      
                        
                            <div class="row-fluid show-grid">
                            <div class="span3">Password</div>
                            <div class="span3">{{ form_widget(form.password.password, { 'attr': {'placeholder': 'Password'} }) }}</div>
                            <div class="span3">Confirm Password</div>
                            <div class="span3">  {{ form_widget(form.password.confirm, { 'attr': {'placeholder': 'Confirm Password'} }) }}   
                        {{ form_errors(form.password.password) }}
                        {{ form_errors(form.password.confirm) }}</div>
                        </div>  
                        
                                    
                        
                        <div class="row-fluid show-grid">
                            <div class="span3">&nbsp;</div>
                            <div class="span3">&nbsp;</div>
                            <div class="span3">&nbsp;</div>
                            <div class="span3">
                                {{ form_rest(form) }}
                                <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="SAVE" class="btn btn-large btn-primary"/> 
                                    <a href="{{ path('owbaz_jobseeker_dashboard', {'user_id': entity.Id}) }}">Cancel  </a>        
                                </div>                                    
                            </div>
                        </div>
                    </div> 




                </div>      
            </div><!-- End pro_detail -->      
        </div><!-- End product_content --> 

</form> 
<script type="text/javascript" src="{{ asset('bundles/owbaz/Site/js/jquery-1.9.1.js') }}"></script>
