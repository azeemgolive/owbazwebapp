<form action="{{ path('owbaz_jobseeker_profile_update', { 'user_id': jobseeker.id }) }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}

    <div id="detail_wrapper">      
        <div id="p_hd">Jobseeker Job Preferences</div>
        <div class="span3">
            <div id="product_content">
                <div id="pro_detail">
                    <div class="edt_container">         
                        <div class="row-fluid show-grid">
                            <div class="span3">Briefly describe yourself and the type of role you are seeking</div>
                            <div class="span3">{{ form_widget(form.description) }}{{ form_errors(form.description) }}</div>
                            
                        </div>          
                                 
                               
                        <div class="row-fluid show-grid">
                            <div class="span3">Country</div>
                            <div class="span3">{{ form_widget(form.country) }}{{ form_errors(form.country) }}</div>                            
                        </div>          
                             
                        <div class="row-fluid show-grid">
                            <div class="span3">JOB CATEGORIES</div>
                            <div class="span3">{{ form_widget(form.jobcategory) }}{{ form_errors(form.jobcategory) }}</div>                            
                        </div>  
                              
                        
                                    
                        
                        <div class="row-fluid show-grid">
                            <div class="span3">&nbsp;</div>
                            <div class="span3">&nbsp;</div>
                            <div class="span3">&nbsp;</div>
                            <div class="span3">
                                {{ form_rest(form) }}
                                <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="SAVE" class="btn btn-large btn-primary"/> 
                                    <a href="{{ path('owbaz_jobseeker_dashboard', {'user_id': jobseeker.Id}) }}">Cancel  </a>        
                                </div>                                    
                            </div>
                        </div>
                    </div> 




                </div>      
            </div><!-- End pro_detail -->      
        </div><!-- End product_content --> 

</form> 
<script type="text/javascript" src="{{ asset('bundles/owbaz/Site/js/jquery-1.9.1.js') }}"></script>
