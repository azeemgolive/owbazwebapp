<form action="{{ path('owbaz_jobseeker_document_edit_upload',{'document_id':entity.getId()}) }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}


    <div id="detail_wrapper">      
        <div id="p_hd">Edit Document</div>
        <div class="span3">
            <div id="product_content">
                <div id="pro_detail">
                    <div class="edt_container">         
                        <div class="row-fluid show-grid">
                            <div class="span3">Document Description</div>
                            <div class="span3">{{ form_widget(form.documentDescription) }}{{ form_errors(form.documentDescription) }}</div>
                        </div>          
                        <div class="row-fluid show-grid">
                            <div class="span3">Is the file Cv:</div>
                            <div class="span3">{{ form_widget(form.isCv) }}{{ form_errors(form.isCv) }}</div>

                        </div>          

                        
                        <div class="row-fluid show-grid">
                            <div class="span3">&nbsp;</div>
                            <div class="span3">&nbsp;</div>
                            <div class="span3">&nbsp;</div>
                            <div class="span3">
                                {{ form_rest(form) }}
                                <div style="margin:0px 0px 0px 0px;"> <input type="submit" value="SAVE" class="btn btn-large btn-primary"/> 
                                    <a href="{{ path('owbaz_jobseeker_document') }}">Cancel  </a>
                                </div>                                    
                            </div>
                        </div>
                    </div> 

                </div>      
            </div><!-- End pro_detail -->      
        </div><!-- End product_content --> 

</form> 

